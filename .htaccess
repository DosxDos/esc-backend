RewriteEngine On

#ARCHIVOS PROHIBIDOS

<Files "conexion.json">
    Require all denied
</Files>

#CORS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

#Permitir que los archivos .html se accedan sin la extensi칩n y con ella
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L,QSA]

#Permitir que los archivos .php se accedan sin la extensi칩n y con ella
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L,QSA]

#Permitir archivos sin extensi칩n
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ $1 [L,QSA]

#Redirigir todo lo dem치s a rutas.php para manejo de rutas en la API
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ app/routers/rutas.php [L,QSA]
